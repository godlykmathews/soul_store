<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Symptoms</th>
                    <th scope="col">Describtion</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 42px; height: 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>